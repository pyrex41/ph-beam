      assert obj2.id in object_ids
      assert obj3.id in object_ids
    end

    test "list_objects/1 returns objects ordered by inserted_at asc", %{canvas: canvas} do
      {:ok, obj1} = Canvases.create_object(canvas.id, "rectangle")
